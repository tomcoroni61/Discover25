<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

<!-- app on uptodown rejected 6.10.25  -->
    <ScrollView
        android:id="@+id/svRejected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvGucks"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/ycbtspeakObt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="9dp"
                android:text="@string/opt"

                />

            <trust.jesus.discover.little.ShButton
                android:id="@+id/ybtspeak"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@+id/ycbtspeakObt"
                android:background="@drawable/btn_dyn_back"
                android:text="@string/speak"
                android:visibility="visible" />

            <TextView
                android:id="@+id/actvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ybtspeak"
                android:layout_margin="25dp"
                android:layout_marginBottom="35dp"
                android:text=""
                android:textSize="19sp" />


        </RelativeLayout>

    </ScrollView>

    <TextView
        android:text=""
        android:id="@+id/tvGucks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/acflowLayout"
        android:layout_margin="5dp"
        android:textSize="13sp"
        />
    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/acflowLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingBottom="12dp"> <!-- ok Bottom space
        android:gravity="bottom"
            android:layout_below="@+id/ctvText" -->

    </org.apmem.tools.layouts.FlowLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvStatus"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lreco"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:id="@+id/lreco"
        android:layout_width="match_parent"
        android:layout_above="@+id/wtvSpeak"
        android:layout_height="wrap_content"
        >
        <trust.jesus.discover.little.ShImageButton
            android:layout_width="50dp"
            android:id="@+id/ybtrecord"
            android:layout_height="50dp"
            android:src="@drawable/baseline_mic_24"
            android:background="@drawable/btn_dyn_back"

            android:layout_marginStart="9dp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>


    <trust.jesus.discover.little.ShTextView
        android:text="@string/s"
        android:id="@+id/wtvSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        />

    <trust.jesus.discover.little.ShTextView
        android:text="@string/question_mark"
        android:id="@+id/actxTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/wtvSpeak"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvMischen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/actxTextView"
        android:layout_marginStart="5dp"
        app:drawableEndCompat="@drawable/refresh_tv"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/acheaderTextView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        app:drawableStartCompat="@drawable/refresh_tv"
        app:drawableEndCompat="@drawable/refresh_tv"
        android:layout_toEndOf="@+id/tvMischen"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        />


</RelativeLayout>
