    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"

        android:background="@drawable/apbarlayer"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/apbarlayer"
            android:orientation="horizontal">

            <trust.jesus.discover.little.ShTextView
                android:id="@+id/btn_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:onClick="btnSpeekClick"
                android:text="@string/speak"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="15sp" />

            <trust.jesus.discover.little.ShTextView
                android:id="@+id/btnNavDlg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@id/btn_speak"
                android:onClick="btnMainDlgClick"
                android:text="@string/nav"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvVersTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnNavDlg"
                android:layout_marginStart="9dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/tvmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:onClick="btnMainSheetClick"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="15sp"
                app:drawableEndCompat="@drawable/baseline_more_vert_36"
                />

        </RelativeLayout>


        <!-- 27
