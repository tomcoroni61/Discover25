<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hapticFeedbackEnabled="false"
    android:orientation="vertical"
    android:paddingHorizontal="62dp"
    android:paddingVertical="5dp">
    <!--android:background="?attr/tabSelected_colour"
android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCurList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/current_list"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSearchRet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <trust.jesus.discover.little.ShButton
            android:id="@+id/btnbuildList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_dyn_back"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:text="@string/build_list" />

        <trust.jesus.discover.little.ShButton
            android:id="@+id/btnopiDlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_dyn_back"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/manage" />

    </LinearLayout>

</LinearLayout>
