<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_le"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <GridView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="38sp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:id="@+id/basiGridView"
        android:padding="0dp"
        android:gravity="start"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="1dp"
        android:scrollingCache="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbottomLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/refresh_tv" />

    <trust.jesus.discover.little.ShTextView
        android:text="@string/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbottomLefttw"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/tvbottomLeft"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        />

    <TextView
        android:text="@string/question_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvFragezeichen"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvbottomLefttw"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvMoves"
        app:drawableStartCompat="@drawable/refresh_tv"
        app:drawableEndCompat="@drawable/refresh_tv"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvbottomLefttw"
        />

</RelativeLayout>