<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <GridView
        android:id="@+id/basiGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvbottomLeft"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:columnWidth="38sp"
        android:gravity="start"
        android:horizontalSpacing="1dp"
        android:numColumns="auto_fit"
        android:padding="0dp"
        android:scrollingCache="true"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="5dp" />

    <trust.jesus.discover.little.ShTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbottomLefttw"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:drawableEndCompat="@drawable/text_to_speech"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbottomLeft"
        android:layout_toEndOf="@id/tvbottomLefttw"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/repeat" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvbottomLefttw"
        android:gravity="center_horizontal">
        <!--app:drawableStartCompat="@drawable/refresh_tv"  -->
        <TextView
            android:id="@+id/tvMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"

            app:drawableEndCompat="@drawable/arrows_shuffle"
            app:drawableStartCompat="@drawable/arrows_shuffle"

            />
    </LinearLayout>

</RelativeLayout>