<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<!--
app:title="@string/preference_category_bible_version_title"
-->
    <PreferenceCategory
        app:title="@string/random_vers"
        app:key="bible_version_category"
        app:iconSpaceReserved="false"
        >
        <ListPreference
            app:key="bible_version"
            app:title="@string/preference_listPreference_bible_version_title"
            app:summary="%s"
            app:defaultValue="@string/preference_listPreference_bible_version_default_value"
            app:entries="@array/bible_versions_names"
            app:entryValues="@array/bible_versions_values"
            app:iconSpaceReserved="true"
            app:singleLineTitle="false"
            />

        <ListPreference
            app:key="rand_range"
            app:defaultValue="nt"
            app:entries="@array/rand_where_entries"
            app:entryValues="@array/rand_where_value"
            app:title="@string/select_random_range"
            app:summary="%s"
            app:useSimpleSummaryProvider="false" />

        <SwitchPreferenceCompat
            app:key="one_book_only"
            app:title="@string/one_book_only" />

        <EditTextPreference
            app:allowDividerBelow="true"
            app:dependency="one_book_only"
            app:key="rand_bookname"
            app:title="@string/book_name_short"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory
        app:allowDividerAbove="true"
        app:iconSpaceReserved="false"
        app:title="@string/verslist">

        <ListPreference
            app:key="search_bible_version"
            app:title="@string/preference_listPreference_bible_version_title"
            app:summary="%s"
            app:defaultValue="@string/preference_listPreference_bible_version_default_value"
            app:entries="@array/bible_versions_names"
            app:entryValues="@array/bible_versions_values"
            app:iconSpaceReserved="true"
            app:singleLineTitle="false"
            />

        <ListPreference
            app:key="search_range"
            app:defaultValue="nt"
            app:entries="@array/search_where_entries"
            app:entryValues="@array/search_where_value"
            app:title="@string/select_search_range"
            app:summary="%s"
            app:useSimpleSummaryProvider="false" />

        <SwitchPreferenceCompat
            app:key="match_case"
            app:title="@string/match_case" />

        <SwitchPreferenceCompat
            app:key="match_whole"
            app:title="@string/match_whole_word" />

        <EditTextPreference
            app:key="search_word"
            app:title="@string/search_one_or_more_words"
            app:useSimpleSummaryProvider="true" />


        <!--
        app:singleLineTitle="true"
            android:singleLine="true"
            android:windowBackground="#F8F4A1"
            android:colorBackground="#F8F4A1"
app:dependency="search_word"..ne..

<trust.jesus.discover.preference.SettingsSearch
            app:key="search_time"
            app:title="search time"
            android:layout="@layout/prefi_search_row"
            />
        -->

        <trust.jesus.discover.preference.SettingsSearch
            app:key="search_time"
            app:title="search time"
            android:layout="@layout/prefi_search_row"
            />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="new_search_list"
            app:switchTextOff="override searchlist"
            app:switchTextOn="new search list"
            app:title="new search list" />

    </PreferenceCategory>


</PreferenceScreen>