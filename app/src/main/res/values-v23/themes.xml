<resources>

    <style name="AppThemeTest" parent="BaseAppTheme">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="android:panelBackground">@color/orange_background</item>
        <item name="android:popupBackground">@color/orange_key_normal</item>
        <item name="android:submitBackground">@color/orange_background</item>
        <item name="android:editTextBackground">@color/orange_key_normal</item> <!-- oki editTextBackground -->
        <item name="android:headerBackground">@color/orange_background</item>
        <item name="android:queryBackground">@color/orange_key_normal</item>
        <item name="android:detailsElementBackground">@color/orange_background</item>

        <item name="android:textColorPrimary">@color/green_box_background</item>
        <item name="android:textColorTertiary">@color/blue_key_pressed</item>

    </style>
    <!-- windowSplashScreen Background -->
    <!-- Base.Theme.Discover https://m2.material.io/develop/android/theming/color -->
    <style name="AppOrangeTheme" parent="BaseAppTheme"  >
        <item name="colorPrimary">@color/orange_key_normal</item>  <!-- Button and some textColor (preferenceEdit)-->
        <item name="colorOnPrimary">@color/orange_box_border</item> <!-- Button Text -->

        <item name="android:textColor">@color/orange_box_border</item> <!-- textColor EditPreference Titelcolor-->
        <item name="android:textColorPrimaryDisableOnly">@color/orange_box_border</item><!-- textColor checkbox -->
        <item name="btn_img_colour">@color/orange_box_border</item> <!--ShBtnText,  Button + TV Image Text -->


        <item name="tabSelected_colour">@color/orange_tab_selected</item> <!-- Tab selected use selectableItemBackground-->
        <item name="android:windowBackground">@color/orange_background</item>
        <item name="android:colorBackground">@color/orange_key_normal</item>  <!-- ON scrollable content. popup list-->
        <item name="button_colour">@color/orange_key_normal</item>         <!-- Sh - Button -->
        <item name="border_colour">@color/md_theme_dark_errorContainer</item>
        <item name="tabLayout_colour">@color/orange_action_bar</item>
        <item name="tabTabs_colour">@android:color/holo_orange_dark</item>
        <item name="sysbar_colour">@color/orange_background</item>

    </style>

